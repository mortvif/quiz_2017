    <% var isTipAuthor = session.user && tip.Author && tip.AuthorId === session.user.id %>

    <% if (accepted || isAdmin || isQuizAuthor || isTipAuthor) { %>

    <li>
        <%= tip.text %>

        <small>(By: <span id="autor"> <%= tip.Author ? tip.Author.username : "AnÃ³nimo" %> </span> ) </small>

        <% if (!accepted && (isAdmin || isQuizAuthor)) { %>

        <a href="/quizzes/<%= quizId %>/tips/<%= tip.id %>/accept?_method=PUT">
